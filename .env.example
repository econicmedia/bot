# AI Trading Bot Environment Configuration

# Application Settings
APP_NAME=AI Trading Bot
APP_VERSION=1.0.0
APP_DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://trading_user:trading_pass@localhost:5432/trading_db
REDIS_URL=redis://localhost:6379/0
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=trading-org
INFLUXDB_BUCKET=market-data

# Trading Configuration
TRADING_MODE=paper
MAX_POSITION_SIZE=0.02
MAX_DAILY_LOSS=0.05
MAX_DRAWDOWN=0.15

# Exchange API Keys (Binance)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_SANDBOX=true

# Exchange API Keys (Coinbase)
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret
COINBASE_PASSPHRASE=your-coinbase-passphrase
COINBASE_SANDBOX=true

# TradingView Integration
TRADINGVIEW_USERNAME=your-tradingview-username
TRADINGVIEW_PASSWORD=your-tradingview-password
TRADINGVIEW_WEBHOOK_URL=https://your-domain.com/webhook/tradingview

# Fusion Trading Integration
FUSION_API_KEY=your-fusion-api-key
FUSION_API_SECRET=your-fusion-api-secret
FUSION_BASE_URL=https://api.fusiontrading.com

# News & Data Sources
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key
NEWS_API_KEY=your-news-api-key

# Security
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRATION=3600
API_KEY_HEADER=X-API-Key

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
SENTRY_DSN=your-sentry-dsn

# Email Alerts
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Discord Alerts
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Telegram Alerts
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
